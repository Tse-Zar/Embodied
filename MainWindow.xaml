<Window x:Class="Embodied.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Embodied"
        mc:Ignorable="d"
        Title="Shadow" Height="700" Width="931"
        xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
        Style="{DynamicResource WindowStyle}" WindowStyle="None"
        AllowsTransparency="True">
    <Grid Name="MainGrid" Margin=" 0 0 0 0">
        <DockPanel VerticalAlignment="Top" Style="{DynamicResource DockPanelStyle}" Height="20">
            <Button Content="Home" Style="{DynamicResource ButtonStyle}"/>
            <Menu Height="15" VerticalAlignment="Center">
                <MenuItem Header="File" Height="15" Style="{DynamicResource MenuItemStyle}">
                    <MenuItem Header="Create" Style="{DynamicResource MenuItemStyle}">
                        <MenuItem Header="New File" Click="CreateFileClick" Style="{DynamicResource MenuItemStyle}"></MenuItem>
                    </MenuItem>
                    <MenuItem Header="Open" Style="{DynamicResource MenuItemStyle}">
                        <MenuItem Header="File" Click="OpenClick" Style="{DynamicResource MenuItemStyle}"></MenuItem>
                    </MenuItem>
                    <Separator/>

                    <MenuItem Header="Save File" Click="SaveClick" Style="{DynamicResource MenuItemStyle}"></MenuItem>
                    <Separator/>

                    <MenuItem Header="Exit" Style="{DynamicResource MenuItemStyle}" Click="ApplicationClose"></MenuItem>
                </MenuItem>
            </Menu>
            <Button Content="✕" Click="ApplicationClose" Style="{DynamicResource ButtonStyle}" Width="35" DockPanel.Dock="Right"/>
            <Button Content="O" Click="WindowedClick" Style="{DynamicResource ButtonStyle}" Width="35" DockPanel.Dock="Right"/>
            <Border DockPanel.Dock="Right" MouseLeftButtonDown="Border_MouseLeftButtonDown" Background="Gray"/>
        </DockPanel>
        <RichTextBox x:Name="Input" Block.LineHeight="1" AcceptsTab="True"  Margin="0,20,0,15" Style="{DynamicResource RichTextBoxStyle}">
            <FlowDocument>
                <Paragraph>
                    <Run Text="New Document"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBlock x:Name="statusBar" Text="Ready" VerticalAlignment="Bottom" Height="15"/>
    </Grid>
</Window>
